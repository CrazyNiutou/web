        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <link href="~/css/site.css" rel="stylesheet" />
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
    <title></title>
    <style>
    </style>
</head>
<body>
    <div id="header">
        <div class="header-c">
            <a href="#" class="logo"><img src="../img/logo.png" /></a>
            <div class="nav">
                <ul id="menu-ul" class="nav-ul ">
                    <li class="actived navactive">
                        <a href="../html/index.html" target="_self">首页</a>
                        <span style="left:50%;width:0px;"></span>
                    </li>
                    <li>
                        <a href="../html/community.html" target="_self">社区</a>
                        <span style="left:50%;width:0px;"></span>
                    </li>
                    <li>
                        <a href="../html/members.html" target="_self">会员</a>
                        <span style="left:50%;width:0px;"></span>
                    </li>
                </ul>
            </div>
            <div id="nav-btn">
                <ul id="login-ul" class="login-ul">
                    <li>
                        <a href="../Account/Register">注册</a>
                        <span style="left:50%;width:0px;"></span>
                    </li>
                    <li>
                        <a href="../account/index">登录</a>
                        <span style="left:50%;width:0px;"></span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

